<?xml version="1.0"?>
<!--
 * @category   Inchoo
 * @package    Inchoo Google Adwords
 * @author     Thomas Birke <tbirke@netextreme.de>
 * @author     Domagoj Potkoc, Inchoo Team <domagoj.potkoc@surgeworks.com>
-->
<config>
    <sections>
        <google>
            <groups>
                <analytics>
                    <fields>
                        <conversion_tracking_enabled translate="label">
                            <label>Enable Adwords Conversion Tracking</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </conversion_tracking_enabled>
                        <conversion_id translate="label">
                            <label>Google conversion id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </conversion_id>
                        <conversion_language translate="label">
                            <label>Google language</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </conversion_language>
                        <conversion_format translate="label">
                            <label>Google conversion format</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </conversion_format>
                        <conversion_color translate="label">
                            <label>Google conversion color</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </conversion_color>
                        <conversion_label translate="label">
                            <label>Google conversion label</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </conversion_label>
                        <conversion_remarketing_only translate="label">
                            <label>Remarketing only</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </conversion_remarketing_only>
                    </fields>
                </analytics>
            </groups>
        </google>
    </sections>
</config>
